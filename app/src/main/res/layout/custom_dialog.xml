<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <include
        layout="@layout/custom_product"
        android:id="@+id/custom_dialog_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/custom_dialog_add"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="#4CAF50"
            android:src="@drawable/ic_baseline_add_24" />

        <EditText
            android:id="@+id/custom_dialog_NumberOfItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"
            android:text="0"
            android:inputType="number"
            android:textSize="@dimen/_16sdp" />

        <ImageButton
            android:id="@+id/custom_dialog_minus"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="#D53939"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/ic_baseline_remove_24" />
    </LinearLayout>

    <Button
        android:id="@+id/custom_dialog_addToBasket"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:text="اضافةالى السلة"
        android:textSize="@dimen/_16sdp"/>


</LinearLayout>