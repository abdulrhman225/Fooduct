<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heatWhite"
    tools:context=".Ui.AdminActivity">

    <RelativeLayout
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/user_background"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="صفحة المسؤول"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/heatWhite"/>

        <ImageButton
            android:id="@+id/admin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/heatYellow"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AdminActivity_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/admin"
        />
</RelativeLayout>